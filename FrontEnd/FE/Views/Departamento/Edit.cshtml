@model FE.Models.Departamento

@{
    ViewData["Title"] = "Edit";
}
<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDepartamento" />
            <div class="form-group">
Departamento:
                <input asp-for="DescripcionDepartamento" class="form-control" />
                <span asp-validation-for="DescripcionDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
