@model IEnumerable<FE.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Departamento</h3>

            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Departamento</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDepartamento)
            </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdDepartamento">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdDepartamento">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdDepartamento">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
