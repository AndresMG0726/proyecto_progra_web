@model FE.Models.InfoContactoUsuario

@{
    ViewData["Title"] = "Create";
}
<h4>Agregar informacion de contacto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*            <div class="form-group">
Usuario:
                <select asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>*@
            <div class="form-group">
Nombre del contacto:
                <input asp-for="NombreCompletoContacto" class="form-control" />
                <span asp-validation-for="NombreCompletoContacto" class="text-danger"></span>
            </div>
            <div class="form-group">
Parentesco:
                <select asp-for="IdRolCont" class ="form-control" asp-items="ViewBag.IdRolCont"></select>
            </div>
            <div class="form-group">
Telefono de contacto:
                <input asp-for="TelefonoContacto" class="form-control" />
                <span asp-validation-for="TelefonoContacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
