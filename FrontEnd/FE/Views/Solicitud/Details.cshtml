@model FE.Models.Solicitud

@{
    ViewData["Title"] = "Details";
}

<h4>Solicitud</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSolicitud" />
            <div class="form-group">
Usuario:
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"disabled="True"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
Estado de la solicitud:
                <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.IdEstado"disabled="True"></select>
                <span asp-validation-for="IdEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
Tipo de solicitud:
                <select asp-for="IdTipo" class="form-control" asp-items="ViewBag.IdTipo" disabled="True"></select>
                <span asp-validation-for="IdTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
Comentario del solicitante:
                <input asp-for="ComentarioSolicitante" class="form-control" disabled="True"/>
                <span asp-validation-for="ComentarioSolicitante" class="text-danger"></span>
            </div>
            <div class="form-group">
Comentario del Encargado:
                <input asp-for="ComentarioEncargado" class="form-control" disabled="True"/>
                <span asp-validation-for="ComentarioEncargado" class="text-danger"></span>
            </div>
            <div class="form-group">
Fecha de emicion:
                <input asp-for="FechaEmicion" class="form-control" disabled="True"/>
                <span asp-validation-for="FechaEmicion" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
