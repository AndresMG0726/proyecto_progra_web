@model IEnumerable<FE.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Usuarios</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                Id Usuario
                            </th>
                            @*            <th>
                                @Html.DisplayNameFor(model => model.Contrasenna)
                                </th>*@
                            <th>
                                Email
                            </th>
                            <th>
                                Telefono
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Primer Apellido
                            </th>
                            <th>
                                Segundo Apellido
                            </th>
                            <th>
                                Fecha Contratacion
                            </th>
                            <th>
                                Departamento
                            </th>
                            <th>
                                Trabajo
                            </th>
                            <th>
                                Rol
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario1)
                                </td>
                                @*            <td>
                                    @Html.DisplayFor(modelItem => item.Contrasenna)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrimerApellidoUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SegundoApellidoUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaContratacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdJob)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdRol)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a> |
@*                                    <a asp-action="Details" asp-route-id="@item.IdUsuario">Details</a> |*@
                                    <a asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
